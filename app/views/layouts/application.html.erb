<!DOCTYPE html>
<html>
  <head>
    <title>BlogKmac</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div id="sidebar">
    <ul>

      <li> <%= link_to "Blog", root_path %> </li>
      <li><%= link_to "About", about_path %></li>
    </ul>

    <ul>

      <li  class="category"><a href="https://github.com/kmac02">Github</a></li>
    </ul>

    <ul>
      <% if user_signed_in? %>
        <div class="new-post-button">

            <button class="button"><%= link_to "New Post", new_post_path %> </button>

        </div>

        <li  class="user category"><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
      <% end %>
      <% if !user_signed_in? %>
        <li class="user"><%= link_to 'Login', '/users/sign_in' %></li>
        <li class="user"><%= link_to 'Signup', '/users/sign_up' %></li>
      <% end %>
    </ul>

    </div>

    <div id="main_content">
      <div id="header">
      <% if current_page?(root_path) %>
        <h2>All posts</h2>
        <% elsif current_page?(about_path) %>
          <p>About</p>
        <% else %>
          <%= link_to "Back to all posts", root_path %>
        <% end %>
      </div>
      <% flash.each do |name, msg| %>
        <%= content_tag(:div, msg, class: "alert") %>
      <% end %>
    <%= yield %>
    </div>
  </body>
</html>
